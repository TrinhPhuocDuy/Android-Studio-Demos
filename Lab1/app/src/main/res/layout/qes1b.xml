<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:fitsSystemWindows="true">

    <!-- Ô 1 -->
    <TextView
        android:id="@+id/box1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#D4C16C"
        android:text="1"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/box2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/box3" />

    <!-- Ô 2 -->
    <TextView
        android:id="@+id/box2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#776B20"
        android:text="2"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/box1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/box5" />

    <!-- Ô 3 -->
    <TextView
        android:id="@+id/box3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#D47CDA"
        android:text="3"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/box4"
        app:layout_constraintStart_toEndOf="@id/box2"
        app:layout_constraintEnd_toStartOf="@id/box6" />

    <!-- Ô 4 -->
    <TextView
        android:id="@+id/box4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFF00"
        android:text="4"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/box3"
        app:layout_constraintBottom_toTopOf="@id/box5"
        app:layout_constraintStart_toEndOf="@id/box2"
        app:layout_constraintEnd_toStartOf="@id/box6" />

    <!-- Ô 5 -->
    <TextView
        android:id="@+id/box5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF0000"
        android:text="5"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/box4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/box2"
        app:layout_constraintEnd_toStartOf="@id/box6" />

    <!-- Ô 6 -->
    <TextView
        android:id="@+id/box6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#A0522D"
        android:text="6"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/box7"
        app:layout_constraintStart_toEndOf="@id/box3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.8" />

    <!-- Ô 7 -->
    <TextView
        android:id="@+id/box7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FAD2D2"
        android:text="7"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/box6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/box6"
        app:layout_constraintEnd_toEndOf="@id/box6"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>
