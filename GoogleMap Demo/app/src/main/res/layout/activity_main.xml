<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main" >

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Map Features"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- GridLayout căn giữa màn hình -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnShowMap"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Show Map"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btnTrack"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Tracking"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btnChangeMarker"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Change Marker"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btnZoomAndCompass"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Zoom And Compass"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btnLocation"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Location"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btnSearchView"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Search View"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btnChangeType"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Change Type Map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnSpan="2" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
